# Resume Health Checker v4.0 - Environment Variables Template
# Copy this to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================
ENVIRONMENT=local
# Options: local, staging, production

# =============================================================================
# OPENAI INTEGRATION
# =============================================================================
OPENAI_API_KEY=sk-...
# Get from https://platform.openai.com/api-keys

# =============================================================================
# STRIPE INTEGRATION - TEST KEYS (Local & Staging)
# =============================================================================
STRIPE_SECRET_TEST_KEY=sk_test_...
STRIPE_PUBLISHABLE_TEST_KEY=pk_test_...
STRIPE_WEBHOOK_TEST_SECRET=whsec_...
# Get from https://dashboard.stripe.com/test/apikeys

# =============================================================================
# STRIPE INTEGRATION - LIVE KEYS (Production Only)
# =============================================================================
STRIPE_SECRET_LIVE_KEY=sk_live_...
STRIPE_PUBLISHABLE_LIVE_KEY=pk_live_...
STRIPE_WEBHOOK_LIVE_SECRET=whsec_...
# Get from https://dashboard.stripe.com/apikeys

# =============================================================================
# RAILWAY DEPLOYMENT URLS
# =============================================================================
RAILWAY_STAGING_URL=https://staging-resume-checker-production-xxxx.up.railway.app
RAILWAY_PRODUCTION_URL=https://resume-checker-production-yyyy.up.railway.app

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
PORT=8000
# Railway will override this automatically

DATABASE_PATH=database.db
# SQLite file path (relative to app directory)

DEBUG=true
# Set to false in production